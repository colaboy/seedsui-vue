<template>
  <div class="mask">
    <div class="scrollpicker">
      <div class="scrollpicker-header">
        <a class="scrollpicker-cancel">取消</a>
        <a class="scrollpicker-done">完成</a>
      </div>
      <div class="scrollpicker-wrapper">
        <div class="scrollpicker-slots"></div>
        <div class="scrollpicker-layer">
          <div class="scrollpicker-layer-frame"></div>
        </div>
      </div>
    </div>
  </div>
</template>
<script>
import SpDate from './picker.date.js'
export default {
  name: 'DatePicker',
  props: {
    viewType: {
      type: String,
      default: 'date'
    },
    isClickMaskHide: {
      type: Boolean,
      default: true
    },
    clickOk: {
      type: Function
    },
    clickCancel: {
      type: Function
    },
    value: {
      type: String
    },
    data: {
      type: Object
    }
  },
  data () {
    return {
      instance: null
    }
  },
  mounted () {
    // 自定义数据
    var yearsData = null
    var monthsData = null
    var daysData = null
    var hoursData = null
    var minutesData = null
    if (this.data) {
      if (this.data.year) {
        yearsData = this.data.year.map((n) => {
          return {
            'key': '' + n,
            'value': '' + n + '年'
          }
        })
      }
      if (this.data.month) {
        monthsData = this.data.month.map((n) => {
          return {
            'key': '' + n,
            'value': '' + n + '月'
          }
        })
      }
      if (this.data.day) {
        daysData = this.data.day.map((n) => {
          return {
            'key': '' + n,
            'value': '' + n + '日'
          }
        })
      }
      if (this.data.hour) {
        hoursData = this.data.hour.map((n) => {
          return {
            'key': '' + n,
            'value': '' + n + '时'
          }
        })
      }
      if (this.data.minute) {
        minutesData = this.data.minute.map((n) => {
          return {
            'key': '' + n,
            'value': '' + n + '分'
          }
        })
      }
    }
    var defaultYear = ''
    var defaultMonth = ''
    var defaultDay = ''
    var defaultHour = ''
    var defaultMinute = ''
    // 默认值
    if (this.value) {
      let values = this.value.split(' ')
      var dateValues = values[0]
      var timeValues = values[1]
      if (dateValues) {
        dateValues = dateValues.split('-')
        defaultYear = dateValues[0]
        defaultMonth = dateValues[1]
        defaultDay = dateValues[2]
      }
      if (timeValues) {
        timeValues = timeValues.split(':')
        defaultHour = timeValues[3]
        defaultMinute = timeValues[4]
      }
    }
    console.log(defaultYear)
    console.log(defaultMonth)
    console.log(defaultDay)
    console.log(defaultHour)
    console.log(defaultMinute)
    // render数据
    this.instance = new SpDate({
      yearsData: yearsData,
      monthsData: monthsData,
      daysData: daysData,
      hoursData: hoursData,
      minutesData: minutesData,
      defaultYear: defaultYear,
      defaultMonth: defaultMonth,
      defaultDay: defaultDay,
      defaultHour: defaultHour,
      defaultMinute: defaultMinute,
      mask: this.$el,
      viewType: this.viewType,
      isClickMaskHide: this.isClickMaskHide,
      onClickDone: (e) => {
        this.clickOk(e)
      },
      onClickCancel: this.clickCancel
    })
  },
  methods: {
  }
}
</script>
